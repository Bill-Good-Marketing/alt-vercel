{
  "compilerOptions": {
    "target": "esnext",
    "types": ["jest", "node"],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ES2022",
      "esModuleInterop": true
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules-linux",
    "ongdb",
    "ongdb-enterprise-1.0.5-unix",
    "jaeger",
    "jaeger-1.63.0-linux-amd64"
  ]
}
